" vimrc for arch linux
" Last Edit November 12, 2021
" I put all the colorschemes last so its easy to get to.

filetype off
set nocompatible

set rtp+=~/.vim/
call plug#begin()

Plug 'junegunn/vim-plug'
Plug 'mhinz/vim-startify'
Plug 'petesuch/vimcolors'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'rafi/awesome-vim-colorschemes'
Plug 'sainnhe/sonokai'
Plug 'preservim/nerdcommenter'
Plug 'preservim/nerdtree'
Plug 'codota/tabnine-vim'
Plug 'easymotion/vim-easymotion'
Plug 'vim-scripts/YankRing.vim'
Plug 'elzr/vim-json'
Plug 'davidhalter/jedi'
Plug 'davidhalter/jedi-vim'
Plug 'nvie/vim-flake8'
Plug 'dense-analysis/ale'

call plug#end()
filetype plugin indent on

let g:startify_custom_header = [
\ '                                ',
\ '            __                  ',
\ '    __  __ /\_\    ___ ___      ',
\ '   /\ \/\ \\/\ \ /  __` __`\    ',
\ '   \ \ \_/ |\ \ \/\ \/\ \/\ \   ',
\ '    \ \___/  \ \_\ \_\ \_\ \_\  ',
\ '     \/__/    \/_/\/_/\/_/\/_/  ',
\ ]

let g:startify_bookmarks = [  '~/',  '~/.vimrc',  '~/.bashrc' ]

let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#left_sep = ' '
let g:airline#extensions#tabline#left_alt_sep = '|'
let g:airline#extensions#tabline#formatter = 'default'
let g:airline_powerline_fonts=1
"let g:airline_theme='papercolor'
"let g:airline_theme='molokai'
let g:airline_theme='base16'

let g:netrw_banner = 1
let g:netrw_liststyle = 3
let g:netrw_browse_split = 3
let g:netrw_altv = 1
let g:netrw_winsize = 35

let NERDTreeShowHidden = 1

let g:flake8_error_marker='EE'     " set error marker to 'EE'
let g:flake8_warning_marker='WW'   " set warning marker to 'WW'
let g:flake8_pyflake_marker=''     " disable PyFlakes warnings
let g:flake8_complexity_marker=''  " disable McCabe complexity warnings
let g:flake8_naming_marker=''      " disable naming warnings

set shortmess+=I
set autochdir
set ffs=unix
set termencoding=utf-8
set encoding=utf-8
set softtabstop=4
set shiftwidth=4
set tabstop=4
set smarttab
set expandtab
set smartindent
set autoindent
set formatoptions=croql
set incsearch
set showcmd
set ruler
set laststatus=2
set t_Co=256 "needed for airline
set nowrap
set number relativenumber
set colorcolumn=80
set lazyredraw
set wildmenu
set showmatch
set scrolloff=8
set listchars=eol:$,tab:>-,trail:~,extends:>,precedes:<

autocmd FileType c setlocal ts=4 sts=4 sw=4
autocmd FileType python setlocal ts=4 sts=4 sw=4
autocmd FileType perl setlocal ts=4 sts=4 sw=4
autocmd FileType html setlocal ts=2 sts=2 sw=2
autocmd FileType javascript setlocal ts=2 sts=2 sw=2
autocmd FileType json setlocal ts=2 sts=2 sw=2
autocmd FileType css setlocal ts=2 sts=2 sw=2
autocmd FileType svg setlocal ts=2 sts=2 sw=2
autocmd BufWritePre * %s/\s\+$//e
autocmd! bufwritepost  .vimrc source %
autocmd Filetype python nnoremap <buffer> <ESC><F6> :w<CR>:vert ter python "%"<CR>

map <silent> <F11> :YRShow<CR>

noswap
syntax on


## bashrc ... a nicer version with cool prompt

alias df='df -h'
alias du='du -h'
alias ls='ls -AF --color'
alias la='ls -alt --color | less -XR'
alias ll='ls -AF --color --format=horizontal | less -XR'
alias lgrep='ls | grep'
set -o vi
export PS1="[\[\e[33m\]\d\[\e[m\] \[\e[33m\]\t\[\e[m\]]\[\e[36m\] \[\e[m\]\[\e[36m\]\u\[\e[m\]@\[\e[36m\]\H\[\e[m\]:\[\e[35m\]\w\[\e[m\] >\n\\$ "
